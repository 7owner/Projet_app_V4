{% extends 'base.html.twig' %}

{% block title %}Modifier Agent #{{ agent.matricule }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-dark d-flex align-items-center justify-content-between rounded-top-4">
            <h3 class="mb-0">
                <i class="fas fa-user-edit me-2"></i>
                Modifier l’agent {{ agent.nom }} {{ agent.prenom }}
            </h3>
            <a href="{{ path('app_agent_show', {'matricule': agent.matricule}) }}" class="btn btn-light btn-sm">
                <i class="fas fa-arrow-left"></i> Retour à l’agent
            </a>
        </div>

        <div class="card-body p-4">
            {{ form_start(form, { 'attr': { 'class': 'row g-3' } }) }}
                {% for field in form %}
                    {% if field.vars.name != '_token' %}
                        <div class="col-md-6">
                            {{ form_row(field, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    {% endif %}
                {% endfor %}

                <div class="col-12 d-flex justify-content-between mt-4">
                    <a href="{{ path('app_agent_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-list"></i> Retour à la liste
                    </a>
                    <button class="btn btn-success">
                        <i class="fas fa-save"></i> {{ button_label|default('Mettre à jour') }}
                    </button>
                </div>
            {{ form_end(form) }}

            <div class="mt-4">
                <form method="post" action="{{ path('app_agent_delete', {'matricule': agent.matricule}) }}" 
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet agent ?');" 
                      style="display:inline-block;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ agent.matricule) }}">
                    <button class="btn btn-danger">
                        <i class="fas fa-trash"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
