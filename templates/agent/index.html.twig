{% extends 'base.html.twig' %}

{% block title %}üë®‚Äçüíº Liste des Agents{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 py-10">
    <div class="container mx-auto px-6 max-w-6xl">
        
        <!-- Titre + bouton -->
        <div class="flex items-center justify-between mb-6">
            <h1 class="text-3xl font-bold text-gray-800">üë®‚Äçüíº Liste des Agents</h1>
            <a href="{{ path('app_agent_new') }}" 
               class="inline-flex items-center bg-indigo-600 text-white px-4 py-2 rounded-lg shadow hover:bg-indigo-700 transition">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Cr√©er un nouvel agent
            </a>
        </div>

        <!-- Tableau -->
        <div class="overflow-x-auto bg-white shadow-lg rounded-lg">
            <table class="min-w-full table-auto border-collapse">
                <thead class="bg-indigo-600 text-white">
                    <tr>
                        <th class="px-4 py-3 text-left text-sm font-semibold">Matricule</th>
                        <th class="px-4 py-3 text-left text-sm font-semibold">Nom</th>
                        <th class="px-4 py-3 text-left text-sm font-semibold">Pr√©nom</th>
                        <th class="px-4 py-3 text-left text-sm font-semibold">Email</th>
                        <th class="px-4 py-3 text-left text-sm font-semibold">T√©l√©phone</th>
                        <th class="px-4 py-3 text-left text-sm font-semibold">Actif</th>
                        <th class="px-4 py-3 text-center text-sm font-semibold">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for agent in agents %}
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-4 py-3 text-sm font-medium text-gray-700">{{ agent.matricule }}</td>
                            <td class="px-4 py-3 text-sm">{{ agent.nom }}</td>
                            <td class="px-4 py-3 text-sm">{{ agent.prenom }}</td>
                            <td class="px-4 py-3 text-sm">{{ agent.email }}</td>
                            <td class="px-4 py-3 text-sm">{{ agent.tel }}</td>
                            <td class="px-4 py-3">
                                {% if agent.actif %}
                                    <span class="px-2 py-1 text-xs font-semibold bg-green-100 text-green-800 rounded-full">‚úî Oui</span>
                                {% else %}
                                    <span class="px-2 py-1 text-xs font-semibold bg-red-100 text-red-800 rounded-full">‚úñ Non</span>
                                {% endif %}
                            </td>
                            <td class="px-4 py-3 text-center space-x-2">
                                <!-- Voir -->
                                <a href="{{ path('app_agent_show', {'matricule': agent.matricule}) }}" 
                                   class="inline-block bg-blue-100 text-blue-700 px-3 py-1 rounded-lg text-xs font-semibold hover:bg-blue-200 transition">
                                    Voir
                                </a>
                                <!-- Modifier -->
                                <a href="{{ path('app_agent_edit', {'matricule': agent.matricule}) }}" 
                                   class="inline-block bg-yellow-100 text-yellow-700 px-3 py-1 rounded-lg text-xs font-semibold hover:bg-yellow-200 transition">
                                    Modifier
                                </a>
                                <!-- Supprimer -->
                                <form method="post" action="{{ path('app_agent_delete', {'matricule': agent.matricule}) }}" 
                                      onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cet agent ?');" 
                                      class="inline-block">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ agent.matricule) }}">
                                    <button class="bg-red-100 text-red-700 px-3 py-1 rounded-lg text-xs font-semibold hover:bg-red-200 transition">
                                        Supprimer
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="px-4 py-6 text-center text-sm text-gray-600">
                                <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-lg inline-block">
                                    ‚ö†Ô∏è Aucun agent trouv√©
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
