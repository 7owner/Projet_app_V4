{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel agent{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between rounded-top-4">
            <h3 class="mb-0"><i class="fas fa-user-plus me-2"></i>Créer un nouvel agent</h3>
            <a href="{{ path('app_agent_index') }}" class="btn btn-sm btn-light">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
        <div class="card-body p-4">
            {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
            {{ form_errors(form) }}

                <div class="col-md-6">
                    {{ form_label(form.matricule, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.matricule, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.matricule) }}
                </div>

                <div class="col-md-6">
                    {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="col-md-6">
                    {{ form_label(form.prenom, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.prenom) }}
                </div>

                <div class="col-md-6">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="col-md-6">
                    {{ form_label(form.tel, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.tel) }}
                </div>

                <div class="col-md-6">
                    {{ form_label(form.dateEntree, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.dateEntree, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.dateEntree) }}
                </div>

                <div class="col-md-6 form-check ms-3">
                    {{ form_widget(form.actif, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(form.actif, null, {'label_attr': {'class': 'form-check-label fw-semibold'}}) }}
                    {{ form_errors(form.actif) }}
                </div>

                <div class="col-md-6 form-check ms-3">
                    {{ form_widget(form.admin, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(form.admin, null, {'label_attr': {'class': 'form-check-label fw-semibold'}}) }}
                    {{ form_errors(form.admin) }}
                </div>

                <div class="col-12">
                    {{ form_label(form.commentaire, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
                    {{ form_errors(form.commentaire) }}
                </div>

                <div class="col-md-6">
                    {{ form_label(form.agence, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.agence, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.agence) }}
                </div>

                <div class="col-12">
                    <h4 class="mt-4">Fonctions</h4>
                    <ul id="agent-fonctions-list" class="list-group" data-prototype="{{ form_widget(form.agentFonctions.vars.prototype)|e('html_attr') }}">
                        {% for fonctionForm in form.agentFonctions %}
                            <li class="list-group-item">{{ form_row(fonctionForm) }}</li>
                        {% endfor %}
                    </ul>
                    <button type="button" id="add-agent-fonction" class="btn btn-secondary btn-sm mt-2">Ajouter une fonction</button>
                </div>

                <div class="col-12 d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i> Enregistrer l’agent
                    </button>
                    <a href="{{ path('app_agent_index') }}" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i> Annuler
                    </a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const addFonctionButton = document.getElementById('add-agent-fonction');
            const fonctionsList = document.getElementById('agent-fonctions-list');
            let fonctionCounter = fonctionsList.children.length;

            addFonctionButton.addEventListener('click', function() {
                const prototype = fonctionsList.dataset.prototype;
                const newForm = prototype.replace(/__name__/g, fonctionCounter);
                fonctionCounter++;
                const newLi = document.createElement('li');
                newLi.className = 'list-group-item';
                newLi.innerHTML = newForm;
                fonctionsList.appendChild(newLi);
            });
        });
    </script>
{% endblock %}
