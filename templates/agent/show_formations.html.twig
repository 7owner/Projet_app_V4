{% extends 'base.html.twig' %}

{% block title %}Formations de {{ agent.nom }} {{ agent.prenom }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white d-flex align-items-center justify-content-between rounded-top-4">
            <h3 class="mb-0">
                <i class="fas fa-graduation-cap me-2"></i>
                Formations de {{ agent.nom }} {{ agent.prenom }}
            </h3>
            <a href="{{ path('app_agent_show', {'matricule': agent.matricule}) }}" class="btn btn-sm btn-light">
                <i class="fas fa-arrow-left"></i> Retour à la fiche de l'agent
            </a>
        </div>

        <div class="card-body p-4">
            {% if formations is not empty %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th><i class="fas fa-list me-1 text-secondary"></i> Type</th>
                                <th><i class="fas fa-book me-1 text-secondary"></i> Libellé</th>
                                <th><i class="fas fa-building me-1 text-secondary"></i> Organisme</th>
                                <th><i class="fas fa-calendar-check me-1 text-secondary"></i> Obtention</th>
                                <th><i class="fas fa-calendar-times me-1 text-secondary"></i> Expiration</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for formation in formations %}
                                <tr>
                                    <td>{{ formation.type }}</td>
                                    <td class="fw-semibold">{{ formation.libelle }}</td>
                                    <td>{{ formation.organisme }}</td>
                                    <td>
                                        {% if formation.dateObtention %}
                                            <span class="badge bg-info text-dark">
                                                {{ formation.dateObtention|date('d/m/Y') }}
                                            </span>
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if formation.dateExpiration %}
                                            {% if formation.dateExpiration < "now"|date %}
                                                <span class="badge bg-danger">
                                                    {{ formation.dateExpiration|date('d/m/Y') }} (Expirée)
                                                </span>
                                            {% else %}
                                                <span class="badge bg-warning text-dark">
                                                    {{ formation.dateExpiration|date('d/m/Y') }}
                                                </span>
                                            {% endif %}
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-warning d-flex align-items-center" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <div>Cet agent n’a <strong>aucune formation</strong> enregistrée.</div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
