{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    {% if app.user %}
        <div class="bg-green-50 border-l-4 border-green-500 text-green-800 p-4 rounded-lg shadow-md mb-8">
            <div class="flex items-center justify-between flex-wrap">
                <div class="flex items-center">
                    <i class="fas fa-check-circle text-green-500 mr-3"></i>
                    <span>Bienvenue {{ app.user.userIdentifier }} ! Vous êtes connecté.</span>
                </div>
                <div class="flex gap-4 mt-4 sm:mt-0">
                    <a href="{{ path('app_dashboard') }}" class="bg-indigo-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-indigo-600 hover:shadow-lg transition-all duration-200">
                        Accéder au tableau de bord
                    </a>
                    <a href="{{ path('app_logout') }}" class="bg-gray-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-gray-600 hover:shadow-lg transition-all duration-200">
                        Déconnexion
                    </a>
                </div>
            </div>
        </div>
    {% else %}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Section Connexion -->
            <div>
                <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-6">Connexion</h1>
                <form method="post" action="{{ path('app_home') }}" class="space-y-6">
                    {% if error %}
                        <div class="bg-red-50 border-l-4 border-red-500 text-red-800 p-4 rounded-lg">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <div>
                        <label for="inputEmail" class="block text-sm font-semibold text-gray-600 mb-1">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg bg-gray-50 focus:bg-white focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 focus:ring-opacity-50 transition-all duration-200 placeholder-gray-400" autocomplete="email" required autofocus>
                    </div>

                    <div>
                        <label for="inputPassword" class="block text-sm font-semibold text-gray-600 mb-1">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg bg-gray-50 focus:bg-white focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 focus:ring-opacity-50 transition-all duration-200 placeholder-gray-400" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                    <div class="flex items-center">
                        <input type="checkbox" name="_remember_me" id="remember_me" class="h-4 w-4 text-indigo-500 focus:ring-indigo-200 border-gray-300 rounded">
                        <label for="remember_me" class="ml-2 text-sm text-gray-600">Se souvenir de moi</label>
                    </div>

                    <div class="flex flex-col sm:flex-row gap-4">
                        <button type="submit" class="bg-indigo-500 text-white font-semibold py-3 px-6 rounded-lg hover:bg-indigo-600 hover:shadow-lg transition-all duration-200">
                            Se connecter
                        </button>
                        <a href="#registration-section" class="bg-gray-500 text-white font-semibold py-3 px-6 rounded-lg hover:bg-gray-600 hover:shadow-lg transition-all duration-200 text-center">
                            S'inscrire
                        </a>
                    </div>
                </form>
            </div>

            <!-- Section Inscription -->
            <div id="registration-section">
                <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-6">Inscription</h1>
                {{ form_start(registrationForm, {'action': path('app_home'), 'attr': {'class': 'space-y-6'}}) }}
                    {{ form_errors(registrationForm, {
                        'attr': {'class': 'bg-red-50 border-l-4 border-red-500 text-red-800 p-4 rounded-lg'}
                    }) }}

                    <div>
                        {{ form_label(registrationForm.email, null, {
                            'label_attr': {'class': 'block text-sm font-semibold text-gray-600 mb-1'}
                        }) }}
                        {{ form_widget(registrationForm.email, {
                            'attr': {
                                'class': 'w-full px-4 py-2 border-2 border-gray-200 rounded-lg bg-gray-50 focus:bg-white focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 focus:ring-opacity-50 transition-all duration-200 placeholder-gray-400'
                            }
                        }) }}
                        {{ form_errors(registrationForm.email, {
                            'attr': {'class': 'text-red-500 text-sm mt-1'}
                        }) }}
                    </div>

                    <div>
                        {{ form_label(registrationForm.plainPassword, 'Mot de passe', {
                            'label_attr': {'class': 'block text-sm font-semibold text-gray-600 mb-1'}
                        }) }}
                        {{ form_widget(registrationForm.plainPassword, {
                            'attr': {
                                'class': 'w-full px-4 py-2 border-2 border-gray-200 rounded-lg bg-gray-50 focus:bg-white focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 focus:ring-opacity-50 transition-all duration-200 placeholder-gray-400'
                            }
                        }) }}
                        {{ form_errors(registrationForm.plainPassword, {
                            'attr': {'class': 'text-red-500 text-sm mt-1'}
                        }) }}
                    </div>

                    <div>
                        {{ form_label(registrationForm.agreeTerms, null, {
                            'label_attr': {'class': 'block text-sm font-semibold text-gray-600 mb-1'}
                        }) }}
                        {{ form_widget(registrationForm.agreeTerms, {
                            'attr': {
                                'class': 'h-4 w-4 text-indigo-500 focus:ring-indigo-200 border-gray-300 rounded'
                            }
                        }) }}
                        {{ form_errors(registrationForm.agreeTerms, {
                            'attr': {'class': 'text-red-500 text-sm mt-1'}
                        }) }}
                    </div>

                    <button type="submit" class="bg-indigo-500 text-white font-semibold py-3 px-6 rounded-lg hover:bg-indigo-600 hover:shadow-lg transition-all duration-200">
                        S'inscrire
                    </button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}