{% extends 'base.html.twig' %}

{% block title %}Liste des Interventions{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between rounded-top-4">
            <h3 class="mb-0">
                <i class="fas fa-tools me-2"></i> Liste des Interventions
            </h3>
            <a href="{{ path('app_intervention_new') }}" class="btn btn-light btn-sm">
                <i class="fas fa-plus-circle"></i> Nouvelle intervention
            </a>
        </div>

        <div class="card-body p-4">
            <!-- üîé Filtres -->
            <form method="get" class="row g-3 mb-4">
                <div class="col-md-4">
                    <label class="form-label"><i class="fas fa-cogs me-1 text-secondary"></i> Maintenance</label>
                    <input type="text" name="maintenance" value="{{ app.request.get('maintenance') }}" class="form-control" placeholder="Titre de la maintenance...">
                </div>
                <div class="col-md-3">
                    <label class="form-label"><i class="fas fa-calendar-plus me-1 text-secondary"></i> Date d√©but</label>
                    <input type="date" name="dateDebut" value="{{ app.request.get('dateDebut') }}" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label"><i class="fas fa-calendar-check me-1 text-secondary"></i> Date fin</label>
                    <input type="date" name="dateFin" value="{{ app.request.get('dateFin') }}" class="form-control">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="fas fa-filter"></i> Filtrer
                    </button>
                </div>
            </form>

            {% if interventions is not empty %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Maintenance</th>
                                <th>Description</th>
                                <th>D√©but</th>
                                <th>Fin</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for intervention in interventions %}
                                <tr>
                                    <td class="fw-bold text-primary">#{{ intervention.id }}</td>
                                    <td>
                                        <span class="fw-semibold">{{ intervention.maintenance.titre }}</span><br>
                                        <small class="text-muted">ID: {{ intervention.maintenance.id }}</small>
                                    </td>
                                    <td>{{ intervention.description }}</td>
                                    <td>{{ intervention.dateDebut ? intervention.dateDebut|date('d/m/Y') : '-' }}</td>
                                    <td>{{ intervention.dateFin ? intervention.dateFin|date('d/m/Y') : '-' }}</td>
                                    <td class="text-center">
                                        <a href="{{ path('app_intervention_show', {'id': intervention.id}) }}" class="btn btn-sm btn-outline-info me-1">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_intervention_edit', {'id': intervention.id}) }}" class="btn btn-sm btn-outline-warning me-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_intervention_delete', {'id': intervention.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette intervention ?');" style="display:inline-block;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ intervention.id) }}">
                                            <button class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> Aucune intervention trouv√©e.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
