{% extends 'base.html.twig' %}

{% block title %}Liste des Interventions{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between rounded-top-4">
            <h3 class="mb-0">
                <i class="fas fa-tools me-2"></i> Liste des Interventions
            </h3>
            <a href="{{ path('app_intervention_new') }}" class="btn btn-light btn-sm">
                <i class="fas fa-plus-circle"></i> Nouvelle intervention
            </a>
        </div>

        <div class="card-body p-4">
            {% if interventions is not empty %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th><i class="fas fa-hashtag text-secondary me-1"></i> ID</th>
                                <th><i class="fas fa-cogs text-secondary me-1"></i> Maintenance</th>
                                <th><i class="fas fa-align-left text-secondary me-1"></i> Description</th>
                                <th><i class="fas fa-calendar-plus text-secondary me-1"></i> Début</th>
                                <th><i class="fas fa-calendar-check text-secondary me-1"></i> Fin</th>
                                <th class="text-center"><i class="fas fa-ellipsis-h text-secondary"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for intervention in interventions %}
                                <tr>
                                    <td class="fw-bold text-primary">#{{ intervention.id }}</td>
                                    <td>
                                        <span class="fw-semibold">{{ intervention.maintenance.titre }}</span>
                                        <br>
                                        <small class="text-muted">ID: {{ intervention.maintenance.id }}</small>
                                    </td>
                                    <td>{{ intervention.description }}</td>
                                    <td>
                                        {% if intervention.dateDebut %}
                                            <span class="badge bg-info text-dark">{{ intervention.dateDebut|date('d/m/Y') }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if intervention.dateFin %}
                                            <span class="badge bg-success">{{ intervention.dateFin|date('d/m/Y') }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <a href="{{ path('app_intervention_show', {'id': intervention.id}) }}" class="btn btn-sm btn-outline-info me-1">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_intervention_edit', {'id': intervention.id}) }}" class="btn btn-sm btn-outline-warning me-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_intervention_delete', {'id': intervention.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette intervention ?');" style="display:inline-block;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ intervention.id) }}">
                                            <button class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-warning d-flex align-items-center" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <div>Aucune intervention trouvée.</div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
