{% extends 'base.html.twig' %}

{% block title %}Liste des Rendez-vous{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0">
                <i class="fas fa-calendar-alt me-2"></i> Liste des Rendez-vous
            </h3>
            <a href="{{ path('app_rendezvous_new') }}" class="btn btn-light btn-sm">
                <i class="fas fa-plus-circle"></i> Nouveau Rendez-vous
            </a>
        </div>

        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-hashtag text-secondary me-1"></i> ID</th>
                            <th><i class="fas fa-heading text-secondary me-1"></i> Titre</th>
                            <th><i class="fas fa-calendar-plus text-secondary me-1"></i> Début</th>
                            <th><i class="fas fa-calendar-check text-secondary me-1"></i> Fin</th>
                            <th class="text-center"><i class="fas fa-info-circle text-secondary me-1"></i> Statut</th>
                            <th class="text-end"><i class="fas fa-ellipsis-h text-secondary"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for rendezvou in rendezvouses %}
                        <tr>
                            <td class="fw-bold text-primary">#{{ rendezvou.id }}</td>
                            <td>{{ rendezvou.titre }}</td>
                            <td>
                                {% if rendezvou.dateDebut %}
                                    <span class="badge bg-info text-dark">{{ rendezvou.dateDebut|date('d/m/Y H:i') }}</span>
                                {% else %}
                                    <span class="text-muted">Non défini</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if rendezvou.dateFin %}
                                    <span class="badge bg-success">{{ rendezvou.dateFin|date('d/m/Y H:i') }}</span>
                                {% else %}
                                    <span class="text-muted">Non défini</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                {% set badge_class = 'bg-secondary' %}
                                {% if rendezvou.statut == 'Planifie' %}
                                    {% set badge_class = 'bg-info text-dark' %}
                                {% elseif rendezvou.statut == 'Confirme' %}
                                    {% set badge_class = 'bg-primary' %}
                                {% elseif rendezvou.statut == 'Termine' %}
                                    {% set badge_class = 'bg-success' %}
                                {% elseif rendezvou.statut == 'Annule' %}
                                    {% set badge_class = 'bg-danger' %}
                                {% endif %}
                                <span class="badge {{ badge_class }} px-3 py-2">{{ rendezvou.statut }}</span>
                            </td>
                            <td class="text-end">
                                <a href="{{ path('app_rendezvous_show', {'id': rendezvou.id}) }}" class="btn btn-sm btn-outline-secondary me-1" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_rendezvous_edit', {'id': rendezvou.id}) }}" class="btn btn-sm btn-outline-primary" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                <i class="fas fa-exclamation-circle me-2"></i> Aucun rendez-vous trouvé.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
