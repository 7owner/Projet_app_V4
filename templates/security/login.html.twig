{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12 max-w-md">
    <form method="post" class="bg-white rounded-2xl shadow-xl p-8 space-y-6">
        {% if error %}
            <div class="bg-red-50 border-l-4 border-red-500 text-red-800 p-4 rounded-lg">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="bg-green-50 border-l-4 border-green-500 text-green-800 p-4 rounded-lg mb-6">
                <div class="flex items-center justify-between flex-wrap">
                    <div class="flex items-center">
                        <i class="fas fa-check-circle text-green-500 mr-3"></i>
                        <span>Vous êtes connecté en tant que {{ app.user.userIdentifier }}</span>
                    </div>
                    <a href="{{ path('app_logout') }}" class="bg-gray-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-gray-600 hover:shadow-lg transition-all duration-200 mt-4 sm:mt-0">
                        Déconnexion
                    </a>
                </div>
            </div>
        {% endif %}

        <h1 class="text-2xl font-bold text-gray-800 mb-6">Connexion</h1>

        <div>
            <label for="inputEmail" class="block text-sm font-semibold text-gray-600 mb-1">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg bg-gray-50 focus:bg-white focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 focus:ring-opacity-50 transition-all duration-200 placeholder-gray-400" autocomplete="email" required autofocus>
        </div>

        <div>
            <label for="inputPassword" class="block text-sm font-semibold text-gray-600 mb-1">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg bg-gray-50 focus:bg-white focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 focus:ring-opacity-50 transition-all duration-200 placeholder-gray-400" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

        <div class="flex items-center">
            <input type="checkbox" name="_remember_me" id="remember_me" class="h-4 w-4 text-indigo-500 focus:ring-indigo-200 border-gray-300 rounded">
            <label for="remember_me" class="ml-2 text-sm text-gray-600">Se souvenir de moi</label>
        </div>

        <button type="submit" class="w-full bg-indigo-500 text-white font-semibold py-3 px-6 rounded-lg hover:bg-indigo-600 hover:shadow-lg transition-all duration-200">
            Se connecter
        </button>
    </form>
</div>
{% endblock %}